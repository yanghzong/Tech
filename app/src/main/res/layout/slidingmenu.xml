<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yizi"
    >

    <LinearLayout
        android:id="@+id/ll_slidingmenu_login"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_46"
        style="@style/Center_Display"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/img_headphoto_slidingmenu"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/login_icon_n_hdpi"
            />
        <TextView
            android:id="@+id/txt_loginandregist_slidingmenu"
            android:textSize="@dimen/dp_20"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:text="@string/txt_loginandregist_slidingmenu"
            style="@style/Center_Display"
            />
    </LinearLayout>

</RelativeLayout>
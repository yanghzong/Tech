<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/con_title_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <RelativeLayout
            android:background="@drawable/zt_msg_contacts_title"
            android:layout_marginTop="@dimen/dp_38"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_188"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/zt_msg_contacts_check_title"
                android:layout_width="@dimen/dp_94"
                android:layout_height="match_parent"
                android:id="@+id/text_selected_state_style"
                />
            <TextView
                android:id="@+id/text_message_fragmentmessage"
                android:textColor="#333333"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:text="消息"
                android:button="@null"
                android:layout_width="@dimen/dp_94"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_94"
                android:id="@+id/text_contacts_fragmentmessage"
                android:textColor="#333333"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:text="联系人"
                android:button="@null"
                android:layout_width="@dimen/dp_94"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_add_all_fragmentmessage"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_44"
            android:background="@mipmap/common_nav_btn_add_n_hdpi"
            />
    </android.support.constraint.ConstraintLayout>
    <FrameLayout
        android:id="@+id/frame_layout_fragmentmessage"
        android:layout_marginTop="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>



</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--新布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_112"
        android:layout_marginBottom="@dimen/dp_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/newsadvisory_sdv_icon"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_92"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            app:placeholderImage="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/newsadvisory_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/newsadvisory_sdv_icon"
            android:lines="1"
            android:text="是谁杀死了国庆档?"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/newsadvisory_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsadvisory_tv_title"
            android:layout_alignLeft="@id/newsadvisory_tv_title"
            android:layout_marginTop="@dimen/dp_10"
            android:lines="2"
            android:text="这里是诶荣这里是诶荣"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/newsadvisory_tv_releaseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@id/newsadvisory_sdv_icon"
            android:text="22个小时前"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/showlist_tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/newsadvisory_tv_releaseTime"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_toRightOf="@id/newsadvisory_sdv_icon"
            android:text="百度"
            android:textSize="@dimen/sp_12" />



        <!--收藏,分享-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/newsadvisory_iv_book"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/common_icon_collect_s_hdpi" />

            <TextView
                android:layout_marginLeft="@dimen/dp_6"
                android:id="@+id/newsadvisory_tv_bookNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120" />

            <ImageView
                android:id="@+id/newsadvisory_iv_share"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/common_icon_collect_n_hdpi" />

            <TextView
                android:id="@+id/newsadvisory_tv_shareNum"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
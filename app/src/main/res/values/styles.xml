<resources>

    <!-- Base application theme. 夜间白天模式切换 -->
<style parent="Theme.AppCompat.DayNight.NoActionBar" name="AppTheme">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

    <!--共同属性抽取-->
    
   <!-- 1. 宽高自适应 并 居中展示(在RelativeLayout下)-->
    <style name="Center_Display">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>


    

</resources>
